<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#eeeeee"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pull_refresh_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            ptr:ptrHeaderBackground="#ffffff"
            ptr:ptrHeaderTextColor="#333333"
            ptr:ptrHeaderTextAppearance="@android:attr/textAppearanceMedium"
            ptr:ptrAnimationStyle="flip">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="360sp"
                    android:background="#4ad9d5">
                <WebView
                        android:id="@+id/weather_webview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                </WebView>

                <Button
                        android:id="@+id/add_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="30sp"
                        android:layout_marginEnd="20sp"
                        android:background="@android:color/transparent"
                        android:textColor="#ffffff"
                        android:textSize="24sp"
                        android:padding="10dp"
                        android:shadowColor="#aaaaaa"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="10"
                        android:text="@string/city_manage_add_city_button"/>

                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/weather_tmp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20°"
                            android:textSize="90sp"
                            android:textColor="#ffffff"
                            android:padding="0dp"
                            android:shadowColor="#aaaaaa"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="10"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="20sp"/>
                    <TextView
                            android:id="@+id/weather_city"
                            android:textColor="#ffffff"
                            android:shadowColor="#aaaaaa"
                            android:textSize="18sp"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="10"
                            android:layout_below="@id/weather_tmp"
                            android:layout_alignStart="@id/weather_tmp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/weather_txt_d"
                            android:textColor="#ffffff"
                            android:shadowColor="#aaaaaa"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:textSize="18sp"
                            android:shadowRadius="10"
                            android:layout_toEndOf="@id/weather_city"
                            android:layout_below="@id/weather_tmp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>

                <LinearLayout
                        android:id="@+id/weather_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="20dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                        <TextView
                                android:id="@+id/weather_dir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="北风"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textColor="#ffffff"/>
                        <TextView
                                android:id="@+id/weather_sc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="微风"
                                android:gravity="center"
                                android:textSize="22sp"
                                android:textColor="#ffffff"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/shape_left_right_border"
                            android:layout_weight="1">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="相对湿度"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textColor="#ffffff"/>
                        <TextView
                                android:id="@+id/weather_hum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="58%"
                                android:gravity="center"
                                android:textSize="22sp"
                                android:textColor="#ffffff"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                        <TextView
                                android:id="@+id/weather_qlty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="空气 良"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textColor="#ffffff"/>
                        <TextView
                                android:id="@+id/weather_aqi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="53"
                                android:gravity="center"
                                android:textSize="22sp"
                                android:textColor="#ffffff"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_top_border"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_above="@id/weather_list"
                        android:layout_height="1dp" />
            </RelativeLayout>

            <com.shianqi.app.weather.Components.NoScrollListView
                    android:id="@+id/NoScrollListview"
                    android:background="#ffffff"
                    android:divider="@drawable/shape_dividing_line"
                    android:listSelector="@android:color/transparent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            <LinearLayout
                    style="@style/suggest_box">
                <LinearLayout
                        style="@style/suggest_title">
                    <TextView
                            style="@style/suggest_title_text"
                            android:text="出行建议"/>
                </LinearLayout>
                <RelativeLayout
                        style="@style/suggest_item">
                    <ImageView
                            android:id="@+id/suggest_item_icon1"
                            style="@style/suggest_item_icon"
                            android:src="@drawable/suggest_icon1"/>
                    <TextView
                            android:id="@+id/suggest_item_title1"
                            style="@style/suggest_item_title"
                            android:layout_alignTop="@id/suggest_item_icon1"
                            android:layout_toEndOf="@id/suggest_item_icon1"/>
                    <TextView
                            android:id="@+id/suggest_item_text1"
                            style="@style/suggest_item_text"
                            android:layout_below="@id/suggest_item_title1"
                            android:layout_toEndOf="@id/suggest_item_icon1"/>
                </RelativeLayout>
                <RelativeLayout
                        style="@style/suggest_item">
                    <ImageView
                            android:id="@+id/suggest_item_icon2"
                            style="@style/suggest_item_icon"
                            android:src="@drawable/suggest_icon2"/>
                    <TextView
                            android:id="@+id/suggest_item_title2"
                            style="@style/suggest_item_title"
                            android:layout_alignTop="@id/suggest_item_icon2"
                            android:layout_toEndOf="@id/suggest_item_icon2"/>
                    <TextView
                            android:id="@+id/suggest_item_text2"
                            style="@style/suggest_item_text"
                            android:layout_below="@id/suggest_item_title2"
                            android:layout_toEndOf="@id/suggest_item_icon2"/>
                </RelativeLayout>
                <RelativeLayout
                        style="@style/suggest_item">
                    <ImageView
                            android:id="@+id/suggest_item_icon3"
                            style="@style/suggest_item_icon"
                            android:src="@drawable/suggest_icon3"/>
                    <TextView
                            android:id="@+id/suggest_item_title3"
                            style="@style/suggest_item_title"
                            android:layout_alignTop="@id/suggest_item_icon3"
                            android:layout_toEndOf="@id/suggest_item_icon3"/>
                    <TextView
                            android:id="@+id/suggest_item_text3"
                            style="@style/suggest_item_text"
                            android:layout_below="@id/suggest_item_title3"
                            android:layout_toEndOf="@id/suggest_item_icon3"/>
                </RelativeLayout>
                <RelativeLayout
                        style="@style/suggest_item">
                    <ImageView
                            android:id="@+id/suggest_item_icon4"
                            style="@style/suggest_item_icon"
                            android:src="@drawable/suggest_icon4"/>
                    <TextView
                            android:id="@+id/suggest_item_title4"
                            style="@style/suggest_item_title"
                            android:layout_alignTop="@id/suggest_item_icon4"
                            android:layout_toEndOf="@id/suggest_item_icon4"/>
                    <TextView
                            android:id="@+id/suggest_item_text4"
                            style="@style/suggest_item_text"
                            android:layout_below="@id/suggest_item_title4"
                            android:layout_toEndOf="@id/suggest_item_icon4"/>
                </RelativeLayout>
                <RelativeLayout
                        style="@style/suggest_item">
                    <ImageView
                            android:id="@+id/suggest_item_icon5"
                            style="@style/suggest_item_icon"
                            android:src="@drawable/suggest_icon5"/>
                    <TextView
                            android:id="@+id/suggest_item_title5"
                            style="@style/suggest_item_title"
                            android:layout_alignTop="@id/suggest_item_icon5"
                            android:layout_toEndOf="@id/suggest_item_icon5"/>
                    <TextView
                            android:id="@+id/suggest_item_text5"
                            style="@style/suggest_item_text"
                            android:layout_below="@id/suggest_item_title5"
                            android:layout_toEndOf="@id/suggest_item_icon5"/>
                </RelativeLayout>
                <RelativeLayout
                        style="@style/suggest_item_last">
                    <ImageView
                            android:id="@+id/suggest_item_icon6"
                            style="@style/suggest_item_icon"
                            android:src="@drawable/suggest_icon6"/>
                    <TextView
                            android:id="@+id/suggest_item_title6"
                            style="@style/suggest_item_title"
                            android:layout_alignTop="@id/suggest_item_icon6"
                            android:layout_toEndOf="@id/suggest_item_icon6"/>
                    <TextView
                            android:id="@+id/suggest_item_text6"
                            style="@style/suggest_item_text"
                            android:layout_below="@id/suggest_item_title6"
                            android:layout_toEndOf="@id/suggest_item_icon6"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    style="@style/suggest_box">
                <LinearLayout
                        style="@style/suggest_title">
                    <TextView
                            style="@style/suggest_title_text"
                            android:text="运动建议"/>
                </LinearLayout>
                <RelativeLayout
                        style="@style/suggest_item_last">
                    <ImageView
                            android:id="@+id/suggest_item_icon7"
                            style="@style/suggest_item_icon"
                            android:src="@drawable/suggest_icon7"/>
                    <TextView
                            android:id="@+id/suggest_item_title7"
                            style="@style/suggest_item_title"
                            android:layout_alignTop="@id/suggest_item_icon7"
                            android:layout_toEndOf="@id/suggest_item_icon7"/>
                    <TextView
                            android:id="@+id/suggest_item_text7"
                            style="@style/suggest_item_text"
                            android:layout_below="@id/suggest_item_title7"
                            android:layout_toEndOf="@id/suggest_item_icon7"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    style="@style/suggest_box">
                <LinearLayout
                        style="@style/suggest_title">
                    <TextView
                            style="@style/suggest_title_text"
                            android:text="驾车建议"/>
                </LinearLayout>
                <RelativeLayout
                        style="@style/suggest_item_last">
                    <ImageView
                            android:id="@+id/suggest_item_icon8"
                            style="@style/suggest_item_icon"
                            android:src="@drawable/suggest_icon8"/>
                    <TextView
                            android:id="@+id/suggest_item_title8"
                            style="@style/suggest_item_title"
                            android:layout_alignTop="@id/suggest_item_icon8"
                            android:layout_toEndOf="@id/suggest_item_icon8"/>
                    <TextView
                            android:id="@+id/suggest_item_text8"
                            style="@style/suggest_item_text"
                            android:layout_below="@id/suggest_item_title8"
                            android:layout_toEndOf="@id/suggest_item_icon8"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>