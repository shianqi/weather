<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pull_refresh_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            ptr:ptrHeaderBackground="#eeeeee"
            ptr:ptrHeaderTextColor="#333333"
            ptr:ptrHeaderTextAppearance="@android:attr/textAppearanceMedium"
            ptr:ptrAnimationStyle="flip">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="360sp"
                    android:background="#4ad9d5">
                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/weather_tmp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0°"
                            android:textSize="80sp"
                            android:textColor="#ffffff"
                            android:padding="0dp"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="20sp"/>
                    <TextView
                            android:id="@+id/weather_city"
                            android:text="沈阳 | "
                            android:textColor="#ffffff"
                            android:layout_below="@id/weather_tmp"
                            android:layout_alignStart="@id/weather_tmp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/weather_txt_d"
                            android:text="多云"
                            android:textColor="#ffffff"
                            android:layout_toEndOf="@id/weather_city"
                            android:layout_below="@id/weather_tmp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>

                <LinearLayout
                        android:id="@+id/weather_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="20dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                        <TextView
                                android:id="@+id/weather_dir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="北风"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textColor="#ffffff"/>
                        <TextView
                                android:id="@+id/weather_sc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="微风"
                                android:gravity="center"
                                android:textSize="22sp"
                                android:textColor="#ffffff"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/shape_left_right_border"
                            android:layout_weight="1">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="相对湿度"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textColor="#ffffff"/>
                        <TextView
                                android:id="@+id/weather_hum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="58%"
                                android:gravity="center"
                                android:textSize="22sp"
                                android:textColor="#ffffff"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                        <TextView
                                android:id="@+id/weather_qlty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="空气 良"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textColor="#ffffff"/>
                        <TextView
                                android:id="@+id/weather_aqi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="53"
                                android:gravity="center"
                                android:textSize="22sp"
                                android:textColor="#ffffff"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_top_border"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_above="@id/weather_list"
                        android:layout_height="1dp" />
            </RelativeLayout>

            <com.shianqi.app.weather.UI.NoScrollListview
                    android:id="@+id/NoScrollListview"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>