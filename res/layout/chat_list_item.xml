<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:background="#f1f1f1"
        android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/chat_item_user_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
        <ImageView
                android:id="@+id/chat_item_user_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_launcher"/>
    </LinearLayout>
    <TextView
            android:id="@+id/chat_item_message_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingStart="5dp"
            android:layout_alignTop="@id/chat_item_user_img_layout"
            android:layout_alignEnd="@id/chat_item_user_img_layout"
            android:textColor="#ffffff"
            android:background="@drawable/new_message_label"
            android:text="1"/>
    <TextView
            android:id="@+id/chat_item_user_name"
            android:layout_toEndOf="@id/chat_item_user_img_layout"
            android:layout_width="wrap_content"
            android:layout_alignTop="@id/chat_item_user_img_layout"
            android:textColor="#111111"
            android:textSize="18sp"
            android:text="USER"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/chat_item_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/chat_item_user_img_layout"
            android:layout_alignParentEnd="true"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:textColor="#888888"
            android:text="下午3:28"/>
    <TextView
            android:id="@+id/chat_item_message_text"
            android:layout_toEndOf="@id/chat_item_user_img_layout"
            android:layout_below="@id/chat_item_user_name"
            android:layout_width="wrap_content"
            android:textColor="#888888"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ase asef a asefa sefa sef asefa sef josaf asedawi pi ip fase fase f"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
</RelativeLayout>